<tool id="excelToFasta" name="Excel to Fasta">
	<description> Converts an excel file generated by the GSL to multi fasta </description>
	<command interpreter="python">
	         excel_to_fasta.py $excel $output $reference
 	</command>
	<inputs>
	        <param format="txt" name="reference" type="data" label="Reference File" />
	        <param format="xlsx" name="excel" type="data" label="Excel File" />
	</inputs>
	<outputs>
	        <data format="fasta" name="output" />
	</outputs>
	
        <stdio>
            <exit_code range="2"   level="fatal"   description="Out of Memory" />
            <exit_code range="3:5" level="warning" description="Low disk space" />
            <exit_code range="6:"  level="fatal"   description="Bad input dataset" />
        </stdio>
         
	<help>
	       Insert Help
	</help>
	
</tool>
